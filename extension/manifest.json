{
  "manifest_version": 3,
  "name": "Clipboard LAN",
  "version": "1.1",
  "description": "Synchronize clipboard history across devices on your local network",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "*://localhost:24900/*",
    "*://127.0.0.1:24900/*",
    "http://192.168.*.*:24900/*",
    "ws://192.168.*.*:24900/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
