{
  "manifest_version": 3,
  "name": "Clipboard Lan",
  "version": "1.0",
  "description": "Synchronize clipboard history across devices on local network",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "action"
  ],
  "host_permissions": [
    "http://0.0.0.0:24900/*",
    "ws://0.0.0.0:24900/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}